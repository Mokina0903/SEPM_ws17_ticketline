<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbEventElement" spacing="1.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.event.EventElementController">
    <stylesheets>
        <URL value="@/css/eventElement.css" />
    </stylesheets>
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
    </padding>
    <Label fx:id="lblTitle" styleClass="eventTitle" text="&lt;EventTitle&gt;" />
    <GridPane>
        <Label fx:id="lblStartDate" styleClass="eventDate" text="&lt;DD.MM.YYYY | hh:mm&gt;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="lblEndDate" styleClass="eventDate" text="&lt;DD.MM.YYYY | hh:mm&gt;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label fx:id="lblArtistName" styleClass="eventText" text="&lt;EventText&gt;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label fx:id="lblArtist" styleClass="eventText" text="&lt;EventText&gt;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="lblPriceText" styleClass="eventPrice" text="&lt;EventPrice&gt;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label fx:id="lblPrice" styleClass="eventPrice" text="&lt;EventPrice&gt;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="196.0" minWidth="143.0" prefWidth="143.0" />
            <ColumnConstraints hgrow="ALWAYS" maxWidth="225.0" minWidth="172.0" prefWidth="225.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         <RowConstraints />
         <RowConstraints />
        </rowConstraints>
    </GridPane>
    <ImageView fx:id="eventImageView" />
    <Label fx:id="lblText" styleClass="eventText" text="&lt;EventText&gt;" wrapText="true" />
    <Button fx:id="ticketReservationButton" styleClass="buyBtn" onAction="#ticketReservationForEvent" text="%events.tickets" />
</VBox>
