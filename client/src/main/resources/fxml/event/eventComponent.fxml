<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="eventRootContainer" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.event.EventController">
    <top>

        <fx:include fx:id="tabHeader" source="/fxml/tabHeader.fxml" />

    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <children>
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <children>
                        <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vgap="10.0" HBox.hgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints halignment="LEFT" maxWidth="-Infinity" minWidth="300.0" prefWidth="430.0" />
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="164.0" minWidth="40.0" prefWidth="67.0" />

                                <ColumnConstraints halignment="RIGHT" maxWidth="-Infinity" minWidth="110.0" prefWidth="110.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                                <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <DatePicker maxWidth="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="430.0" promptText="%events.date" GridPane.rowIndex="1" />
                                <HBox>
                                    <children>
                                        <TextField fx:id="tfSearchFor" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="400.0" promptText="%events.searchFor" />
                                        <ChoiceBox fx:id="cbSearch" maxWidth="-Infinity" minWidth="30.0" prefWidth="30.0" />
                                    </children>
                                </HBox>
                                <Button fx:id="btAdvSearch" onAction="#testSearch" minHeight="64.0" minWidth="110.0" mnemonicParsing="false" prefHeight="64.0" text="%events.advSearch" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="TOP" />
                                <Button fx:id="btSearch" defaultButton="true" minWidth="40.0" prefWidth="40.0" GridPane.columnIndex="1" />
                            </children>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </GridPane>
                    </children>
                </HBox>
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="600.0" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <children>
                        <Pagination fx:id="pagination" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="600.0" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </HBox.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </Pagination>
                        <GridPane hgap="10.0" maxWidth="-Infinity" prefWidth="77.0" vgap="20">
                            <Button fx:id="btnAddEvent" onAction="#openCSVImportWindow" text="+" GridPane.rowIndex="1" />
                            <columnConstraints>
                                <ColumnConstraints />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" top="5.0" />
                            </HBox.margin>
                        </GridPane>
                    </children>
                </HBox>
            </children>
        </VBox>

    </center>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

</BorderPane>
