<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="customerOverviewRoot" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.customer.CustomerController">

    <top>
        <fx:include source="/fxml/tabHeader.fxml" fx:id="tabHeader"/>
    </top>

    <center>

        <TableView fx:id="userTableView">
            <columns>
                <TableColumn fx:id="colNumber" text="%customer.number" />
                <TableColumn fx:id="colFname" text="%customer.fname" />
            <TableColumn fx:id="colLname" text="%customer.lname" />
            <TableColumn fx:id="colBirthdate" text="%customer.birthdate" />
            <TableColumn fx:id="colEmail" text="Email" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <GridPane hgap="10" vgap="20">
            <BorderPane.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </BorderPane.margin>
            <Button fx:id="btNew" onAction="#openNewDialog" text="new" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Button fx:id="btEdit" onAction="#openEditDialog" text="edit" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Button fx:id="btTickets" text="Tickets..." GridPane.columnIndex="0" GridPane.rowIndex="2" />
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

    </right>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

</BorderPane>
