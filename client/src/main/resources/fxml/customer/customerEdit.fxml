<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.customer.CustomerDialogController">
    <center>
        <GridPane hgap="10" vgap="20">

            <Label fx:id="lbCustomerNumberText" text="%customer.number" GridPane.columnIndex="0" GridPane.rowIndex="0" />


            <Label fx:id="lbCustomerName" text="%customer.lname" GridPane.rowIndex="1" />
            <TextField fx:id="tfLname" GridPane.columnIndex="1" GridPane.rowIndex="1" />


            <Label fx:id="lbCustomerBirthdate" text="%customer.birthdate" GridPane.rowIndex="3" />

            <Button fx:id="btOk" onAction="#handleOk" text="OK" GridPane.columnIndex="1" GridPane.rowIndex="7" />
         <Label fx:id="lbCustomerNumber" text="Label" GridPane.columnIndex="1" />
         <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <Label fx:id="lbCustomerEmail" text="Email" GridPane.rowIndex="5" />
         <Button mnemonicParsing="false" onAction="#handleCancel" text="%menu.cancel" GridPane.rowIndex="7" />
         <TextField GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <Label fx:id="lbInvalidName" text="%customer.invalidName" textFill="#cc1d1d" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <Label fx:id="lbInvalidBirthdate" text="%customer.invalidBirthdate" textFill="#cc1d1d" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <Label fx:id="lbInvalidEmail" text="%customer.invalidEmail" textFill="#cc1d1d" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            </rowConstraints>
        </GridPane>

    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>


</BorderPane>
