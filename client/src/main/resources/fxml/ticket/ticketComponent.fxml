<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.ticket.TicketController">
    <top>
        <fx:include source="/fxml/tabHeader.fxml" fx:id="tabHeader"/>
    </top>

    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">

            <HBox>
                <TextField fx:id="tfSearch" prefHeight="26.0" prefWidth="343.0" promptText="%ticket.searchField"
                           GridPane.columnIndex="1"/>
                <Button text="search" defaultButton="true" mnemonicParsing="false" GridPane.columnIndex="0" onAction="#search" />
            </HBox>
            <Label fx:id="lblNoMatch" text="%customer.noMatches" />
            <Pagination fx:id="pagination" maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="600.0"
                        HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </Pagination>
        </VBox>
    </center>
    <right>
        <HBox spacing="5">
            <VBox >
            <BorderPane.margin>
                <Insets top="121" right="20" />
            </BorderPane.margin>
            <Button fx:id="btnStorno" text="%ticket.storno" prefHeight="25.0" prefWidth="80.0" onAction="#storno"/>
            <Label fx:id= "lblStorno" textFill="#cc1d1d" prefHeight="40.0" prefWidth="100.0"/>
            <BorderPane.margin>
                <Insets top="131" right="20" />
            </BorderPane.margin>
            <Button fx:id="btnPay" text="%ticket.pay" prefHeight="25.0" prefWidth="80.0" onAction="#pay"/>
            <Label fx:id= "lblPay" textFill="#cc1d1d" prefHeight="40.0" prefWidth="100.0"/>
            <BorderPane.margin>
                <Insets top="141" right="20" />
            </BorderPane.margin>
            <Button fx:id="btnStornoInvoice" text="%ticket.stornoInvoice" wrapText="true" prefHeight="25.0" prefWidth="150.0" onAction="#createStornoInvoice"/>
                <Label fx:id= "lblStornoInvoice" textFill="#cc1d1d" prefHeight="40.0" prefWidth="100.0"/>
            </VBox>
        </HBox>

    </right>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

</BorderPane>
