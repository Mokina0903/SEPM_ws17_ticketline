<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>


<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<BorderPane fx:id ="userOverviewRoot" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.user.UserController">

    <top>
        <fx:include source="/fxml/tabHeader.fxml" fx:id="tabHeader" />
    </top>

    <center>

        <TableView fx:id="userTableView">
            <columns>
                <TableColumn fx:id="usernameCol" prefWidth="300.0" text="Name"/>
                <TableColumn fx:id="roleCol" prefWidth="50.0" text="Role"/>
                <TableColumn fx:id="blockedCol" prefWidth="50.0" text="blocked"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <GridPane hgap="10" vgap="20">
            <BorderPane.margin>
                <Insets left="10" top="10" bottom="10" right="10" />
            </BorderPane.margin>
            <Button fx:id="addUser" onAction="#openAddUserDialog" text="Add User" prefWidth="170.0" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Button fx:id="unlock" onAction="#unlockUser" text="Unlock" prefWidth="170.0" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Button fx:id="lock" onAction="#lockUser" text="Lock" prefWidth="170.0" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Button fx:id="resetPwd" onAction="#openEditUserDialog" prefWidth="170.0" text="Reset Password" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        </GridPane>

    </right>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

</BorderPane>
