<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbDetailedNewsBox" minHeight="200.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.news.DetailedNewsController">
    <children>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="8" />
            <VBox>
                <stylesheets>
                    <URL value="@/css/newsElement.css" />
                </stylesheets>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Label fx:id="lblDate" styleClass="newsPublishDate" text="&lt;DD.MM.YYYY | hh:mm&gt;" />
                <Label fx:id="lblTitle" prefHeight="20.0" prefWidth="160.0" styleClass="newsTitle" text="&lt;NewsTitle&gt;" />
                <Label fx:id="lblText" styleClass="newsText" text="&lt;NewsText&gt;" wrapText="true" />
                <ImageView fx:id="newsImageViews" />
                <Button fx:id="backButton" onAction="#backToSimpleNewsView" text="%detailedNews.backButton">
               <VBox.margin>
                  <Insets top="60.0" />
               </VBox.margin></Button>
            </VBox>
        </ScrollPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
