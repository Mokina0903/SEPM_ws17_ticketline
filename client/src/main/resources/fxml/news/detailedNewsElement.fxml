<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.news.DetailedNewsController"
      prefHeight="400.0" prefWidth="600.0">
    <children>
        <fx:include source="/fxml/tabHeader.fxml" fx:id="tabHeader"/>
        <Separator/>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS"
                    style="-fx-background-color: transparent;">
            <VBox>
                <stylesheets>
                    <URL value="@/css/newsElement.css"/>
                </stylesheets>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label fx:id="lblDate" styleClass="newsPublishDate" text="&lt;DD.MM.YYYY | hh:mm&gt;"/>
                <Label fx:id="lblTitle" styleClass="newsTitle" text="&lt;NewsTitle&gt;"/>
                <Label fx:id="lblText" styleClass="newsText" wrapText="true" text="&lt;NewsText&gt;"/>
                <ImageView fx:id="newsImageViews"/>
            </VBox>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Button fx:id="backButton" text="detailedNews.backbutton" onAction="#backToSimpleNewsView"/>
            </HBox>
        </ScrollPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
